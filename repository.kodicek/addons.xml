<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.kodicek"
       name="Kodíček"
       version="0.0.109"
       provider-name="DavioCZ">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.31.0"/>
        <!-- <import addon="script.module.beautifulsoup4" version="0.0.0"/> -->
        <import addon="script.module.unidecode" version="0.4.16"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="kodicek.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata" icon="icon.png">
        <summary lang="cs">Jednoduchý vyhledávač a přehrávač filmů z Webshare pro Kodi.</summary>
        <disclaimer lang="cs">Plugin neposkytuje žádný obsah, je to jen simulace prohlížeče veřejně dostupné web stránky. Nejsem zodpovědný za obsah, který tato stránka poskytuje.</disclaimer>
        <platform>all</platform>
        <license>AGPL 3.0</license>
        <!-- Zde můžeš uvést odkaz na fórum nebo repo -->
        <!-- <forum>https://www.xbmc-kodi.cz/prispevek-kodicek</forum> -->
        <!-- <source>https://github.com/DavioCZ/Kodicek</source> -->
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>
            [B]1.4.0[/B] - 2025-07-06 - Oprava struktury ZIP balíčků a verzování pro zajištění kompatibility s Kodi. Vylepšen CI/CD pipeline pro automatické buildy a nasazení.
        </news>
    </extension>

</addon>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.kodicek" name="Kodicek Repository" version="0.1.5" provider-name="DavioCZ">
    <extension point="xbmc.addon.repository" name="Kodicek Repository">
        <info compressed="true">https://daviocz.github.io/repository.kodicek/addons.xml</info>
        <checksum>https://daviocz.github.io/repository.kodicek/addons.xml.md5</checksum>
        <datadir zip="true">https://daviocz.github.io/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Instalační repozitář pro doplňky od DavioCZ</summary>
        <description>Tento repozitář obsahuje doplňky pro Kodi, včetně populárního pluginu Kodíček pro přehrávání online obsahu.</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

</addons>
